<!-- index.ejs -->
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <div class="app">
    <h1>&#128508; mini messages app &#128508; </h1>
        <div class="message" style="border: none;">
          <button class="add">
              <a href="/new">message</a>
          </button>
        </div>
        <% messages.forEach((message) => { %>
            <div class="message">
                <p style="text-align: end;
                    margin-top: 1px; margin-bottom: 1px; transform: translateY(20px);">
                    <button type="button" id= <%= messages.indexOf(message) %> >
                      <a href= <%= messages.indexOf(message) %> >open</a>
                    </button>
                </p>
                <h3 style="margin: 5px;"><%= message.user %> </h3>
                <p><%= message.text %></p>
                <p style="text-align: end; font-size: 0.9rem;"><%= message.added %></p>
            </div>    

        <% }); %>
    </div>

  </body>
</html>

