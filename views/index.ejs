<!-- index.ejs -->
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <div class="app">
      <div class="top">
          <h2>&#128508; mini messages app &#128508; </h2>
          <h5>for Odin fans</h5>
      </div>
      
      <div class="space" style="margin-top: 100px;">fvreverver</div>
      
        <% if (locals.rows){ %>
        <% rows.forEach((row) => { %>
            <div class="message">
                <p style="text-align: end;
                    margin-top: 1px; margin-bottom: 1px; transform: translateY(20px);">
                    <form action="/<%= row.id %>/delete" method="POST" style="display:inline;border: none;">
                      <button type="submit" onclick="return confirm('Are you sure you want to delete this message?');">Delete</button>
                    </form>
                    <button type="button">
                      <a href= <%= row.id %> >open</a>
                    </button>
                </p>  
                <h4 style="margin: 5px;"><i>user: </i> <%= row.messageuser %> </h4>
                <p><%= row.messagetext %></p>
                <p style="text-align: end; font-size: 0.8rem; color: red; padding: 3px;"><%= row.added %>, London time</p>
            </div>    
        <% }) %>
        <% }%>
     
      <%- include("form.ejs") %>
    </div>
   
  </body>
</html>

