<!-- index.ejs -->
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <div class="app">
      <h1>&#128508; mini messages app &#128508; </h1>
        <div class="message" style="border: none;">
          <button class="add">
              <a href="/new">new message</a>
          </button>
        </div>
        <% if (locals.rows) {%>
        <% rows.forEach((row) => { %>
            <div class="message">
                <p style="text-align: end;
                    margin-top: 1px; margin-bottom: 1px; transform: translateY(20px);">
                    <form action="/<%= row.id %>/delete" method="POST" style="display:inline;">
                      <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                    </form>
                    <button type="button">
                      <a href= <%= row.id %> >open</a>
                    </button>
                </p>  
                <h3 style="margin: 5px;"><%= row.messageuser %> </h3>
                <p><%= row.messagetext %></p>
                <p style="text-align: end; font-size: 0.9rem;"><%= row.added %></p>
            </div>    
        <% }) %>
        <% }%>
    </div>

  </body>
</html>

